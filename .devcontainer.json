{
	"image": "mcr.microsoft.com/devcontainers/go:1.20-bullseye",
	"privileged": true,
	"capAdd": ["SYS_ADMIN"],
	"postCreateCommand": "git remote add upstream https://github.com/intertwin-eu/interLink ;git  fetch upstream; go install github.com/go-delve/delve/cmd/dlv@latest",
    "features": {
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "latest"
		}
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.makefile-tools",
				"golang.go",
				"github.vscode-github-actions",
				"yzhang.markdown-all-in-one",
				"pomdtr.excalidraw-editor",
				"ms-azuretools.vscode-docker"
			]
		}
	}
}